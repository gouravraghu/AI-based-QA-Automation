{
    "manifest_version": 3,
    "name": "Action Tracker",
    "version": "1.0",
    "description": "Tracks user interactions and saves them as a text file.",
    "permissions": ["activeTab", "downloads", "storage", "tabs"],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ]
}
